{{>adminNav}}
<div class="tableContainer mt-4">

    <div class="tableDiv">
        <h1 style="text-align: center " class="mb-3">All Products</h1>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    {{!-- <th scope="col">Description</th> --}}
                    <th scope="col">Price</th>

                </tr>
            </thead>
            <tbody>
                
            

                {{#each products }}
                <div class="head">
                    <tr>
                        <th scope="row">{{this.title}}</th>
                        {{!-- <th >{{this.description}}</th> --}}
                        <th class="stat">{{this.price}}</th>
                        <td>
                            <div class="d-flex justify-content-end gap-2">


                                <!-- edit button -->
                                <form action="/editProduct/{{this._id}}" method="GET">
                                    <button type="submit" class="btn btn-primary custom-btn">Edit</button>
                                </form>
                                <!-- delete   -->

                                <form action="/delete/{{this._id}}" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>

                            </div>
                        </td>
                    </tr>
                </div>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>

